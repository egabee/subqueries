    "test": "subql build && subql-node-cosmos test"
  },
  "files": [
    "dist",
    "schema.graphql",
    "project.yaml"
  ],
  "dependencies": {
    "@cosmjs/tendermint-rpc": "^0.30.1",
    "@subql/types": "^2.1.2",
    "@subql/types-cosmos": "latest",
    "@types/node": "^17.0.21",
    "dotenv": "^16.3.1",
    "kafkajs": "^2.2.4",
    "pino": "^7.8.0",
    "ts-proto": "^1.112.1",
    "tslib": "^2.3.1"
  }
}