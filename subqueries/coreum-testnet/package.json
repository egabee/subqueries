{
  "name": "coreum-testnet",
  "version": "0.0.1",
  "description": "Coreum testnet subquery",
  "homepage": "https://github.com/web3query/subqueries",
  "repository": "github:web3query/subqueries",
  "author": "Web3query Team",
  "main": "dist/index.js",
  "scripts": {
    "build": "subql build",
    "codegen": "subql codegen",
    "cp:proto": "cp -r ../common/proto ./proto",
